{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "lib": ["es2021"],
    "moduleResolution": "node",
    "sourceMap": false,
    "declaration": false,
    "removeComments": false,
    "noImplicitAny": false,
    "outDir": "typeScript",
    "typeRoots": ["./node_modules/@types"],
    "types": ["node", "cucumber"]
  },
  "exclude": ["node_modules", "typescript"]
}
